<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/PeakUsagePrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/peak_usage"
            android:textAppearance="@layout/main" />

        <TextView
            android:id="@+id/PeakUsage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/OffPeakUsagePrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/offpeak_usage"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/OffPeakUsage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

</TableLayout>